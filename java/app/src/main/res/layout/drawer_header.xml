<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorSecondaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgDrawerCover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover_mask_circle" />

    <TextView
        android:id="@+id/txtDrawerTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:text="Songtitle"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgDrawerCover"
        app:layout_constraintTop_toTopOf="@+id/imgDrawerCover" />

    <TextView
        android:id="@+id/txtDrawerArtist"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:text="Artist"
        android:textColor="@color/colorSecondary"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txtDrawerTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtDrawerTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>